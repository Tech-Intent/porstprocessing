{
	"include": ["./src", "./demo/src", "./manual/js"],
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./build",
		"paths": {
			"postprocessing": ["./src/index.js"]
		},
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"allowJs": true,
		"sourceMap": false,
		"skipLibCheck": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"noImplicitOverride": true,
		"allowSyntheticDefaultImports": true
	}
}
